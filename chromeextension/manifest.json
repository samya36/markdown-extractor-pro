{
  "manifest_version": 3,
  "name": "Markdown Extractor Pro",
  "version": "1.0.0",
  "description": "提取网页内容并保存为格式化的Markdown，保留原始样式",
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "downloads",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}